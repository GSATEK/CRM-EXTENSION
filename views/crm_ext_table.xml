<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_table_tree" model="ir.ui.view">
        <field name="name">crm.table.tree</field>
        <field name="model">crm.table</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="crm_stage_ids"/>
                <field name="stage_count"/>
            </tree>
        </field>
    </record>

    <record id="crm_table_form" model="ir.ui.view">
        <field name="name">crm.table.form</field>
        <field name="model">crm.table</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Table">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="crm_stage_ids" widget="many2many_tags"/>
                            <field name="stage_count"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<record id="view_crm_table_kanban" model="ir.ui.view">
    <field name="name">crm.table.kanban</field>
    <field name="model">crm.table</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" sample="1" quick_create="false">
            <field name="name"/>
            <field name="stage_count"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card">
                        <div class="o_dropdown_kanban dropdown">
                            <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                <span class="fa fa-ellipsis-v"/>
                            </a>
                            <div class="dropdown-menu" role="menu">
                                <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Editar</a></t>
                                <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Eliminar</a></t>
                            </div>
                        </div>

                        <div class="o_kanban_record_top mb16">
                            <div class="o_kanban_record_headings mt4">
                                <strong class="o_kanban_record_title">
                                    <a name="action_view_crm_lead_table" type="object">
                                        <span t-out="record.name.value"/>
                                    </a>
                                </strong>
                            </div>
                        </div>

                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left text-muted">
                                <span>
                                    Etapas: <t t-out="record.stage_count.value"/>
                                </span>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


</odoo>

